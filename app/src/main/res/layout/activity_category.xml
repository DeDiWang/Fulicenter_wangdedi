<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.ucai.fulicenter.activity.CategoryActivity">
    <RelativeLayout
        android:id="@+id/layout_group_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_orange">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="美妆"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/orange">
        <Button
            android:id="@+id/btnSortPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="价格"
            android:textSize="20dp"
            android:paddingRight="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableRight="@drawable/arrow_order_down"/>
        <Button
            android:id="@+id/btnSortTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="上架时间"
            android:textSize="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/arrow_order_up"/>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srlCategoryChild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/list_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvRefreshHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="刷新中..."
                android:gravity="center_horizontal"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvCategoryChild"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
